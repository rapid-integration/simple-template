{
  "name": "template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "format": "prettier !pnpm-lock.yaml --write --ignore-path .gitignore .",
    "format:check": "prettier !pnpm-lock.yaml --check --ignore-path .gitignore .",
    "format:package": "sort-package-json",
    "lint": "eslint .",
    "lint:fsd": "steiger ./src",
    "lint:tsc": "tsc",
    "openapi": "openapi-typescript http://localhost/api/docs/openapi.json -o ./src/shared/api/types.ts --root-types --root-types-no-schema-prefix",
    "prepare": "git config core.hooksPath ./apps/frontend/.husky",
    "start": "next start"
  },
  "dependencies": {
    "@mantine/core": "^8.3.3",
    "@mantine/form": "^8.3.3",
    "@mantine/hooks": "^8.3.3",
    "@mantine/notifications": "^8.3.3",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "mantine-form-zod-resolver": "^1.3.0",
    "next": "^15.5.4",
    "next-safe-navigation": "^0.4.0",
    "nuqs": "^2.7.0",
    "openapi-fetch": "^0.14.1",
    "openapi-typescript": "^7.9.1",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "postcss-preset-mantine": "^1.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@next/eslint-plugin-next": "^15.5.4",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.37.0",
    "eslint-config-next": "^15.5.4",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-dom": "^2.2.2",
    "eslint-plugin-react-hooks": "^6.1.1",
    "eslint-plugin-react-naming-convention": "^2.2.2",
    "eslint-plugin-react-web-api": "^2.2.2",
    "eslint-plugin-react-x": "^2.2.2",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.4.0",
    "steiger": "^0.5.11",
    "typescript-eslint": "^8.45.0"
  }
}
