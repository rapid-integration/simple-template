{
  "name": "template",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "pnpm lint-steiger && pnpm lint-eslint",
    "lint-eslint": "pnpm --node-options='--experimental-strip-types' eslint --max-warnings=0 .",
    "lint-steiger": "steiger ./src",
    "format": "pnpm format-prettier-write",
    "format-prettier-check": "prettier !pnpm-lock.yaml --check --ignore-path .gitignore .",
    "format-prettier-write": "prettier !pnpm-lock.yaml --check --write --ignore-path .gitignore .",
    "generate": "pnpm generate-api-types",
    "generate-api-types": "openapi-typescript http://localhost/api/docs/openapi.json -o ./src/shared/api/types.ts --root-types --root-types-no-schema-prefix",
    "prepare": "git config core.hooksPath ./apps/frontend/.husky"
  },
  "dependencies": {
    "@mantine/core": "^8.3.2",
    "@mantine/form": "^8.3.2",
    "@mantine/hooks": "^8.3.2",
    "@mantine/notifications": "^8.3.2",
    "mantine-form-zod-resolver": "^1.3.0",
    "next": "^15.5.4",
    "next-safe-navigation": "^0.4.0",
    "nuqs": "^2.7.0",
    "openapi-fetch": "^0.14.1",
    "openapi-typescript": "^7.9.1",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "virtua": "^0.44.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@feature-sliced/steiger-plugin": "^0.5.7",
    "@next/eslint-plugin-next": "^15.5.4",
    "@types/node": "^24.6.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-next": "^15.5.4",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "steiger": "^0.5.11",
    "typescript": "^5.8.9",
    "typescript-eslint": "^8.45.0"
  },
  "postcss": {
    "plugins": {
      "postcss-preset-mantine": {}
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "jsxSingleQuote": false,
    "printWidth": 80,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  },
  "lint-staged": {
    "*.{mjs,ts,tsx}": [
      "pnpm lint"
    ],
    "*.{mjs,ts,tsx,css,json,md}": [
      "pnpm format"
    ]
  }
}
