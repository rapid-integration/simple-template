{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "format": "pnpm format:package && pnpm format:prettier:write",
    "format:package": "sort-package-json",
    "format:prettier:check": "prettier !pnpm-lock.yaml --check --ignore-path .gitignore .",
    "format:prettier:write": "prettier !pnpm-lock.yaml --check --write --ignore-path .gitignore .",
    "generate:api-types": "openapi-typescript http://localhost/api/docs/openapi.json -o ./src/shared/api/types.ts --root-types --root-types-no-schema-prefix",
    "lint": "pnpm lint:steiger && pnpm lint:next",
    "lint:next": "next lint . --max-warnings=0",
    "lint:steiger": "steiger ./src",
    "prepare": "git config core.hooksPath ./apps/frontend/.husky",
    "start": "next start"
  },
  "dependencies": {
    "@mantine/core": "^8.3.2",
    "@mantine/form": "^8.3.2",
    "@mantine/hooks": "^8.3.2",
    "@mantine/notifications": "^8.3.2",
    "next": "15.4.3",
    "next-safe-navigation": "^0.4.0",
    "next-themes": "^0.4.6",
    "openapi-fetch": "^0.14.0",
    "openapi-typescript": "^7.8.0",
    "postcss": "^8.5.6",
    "postcss-preset-mantine": "^1.18.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@feature-sliced/steiger-plugin": "^0.5.6",
    "@next/eslint-plugin-next": "15.4.3",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "sort-package-json": "^3.3.1",
    "steiger": "^0.5.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  },
  "engines": {
    "node": "^22.16.0",
    "pnpm": "^10.11.0"
  }
}
